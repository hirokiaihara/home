.main-header
  .main-header__logo 
    = link_to root_path do
      .logo
        = image_tag 'logo.png'
  .main-header__search
    = form_tag(search_plays_path, method: "get") do
      = text_field_tag :keyword, '', class: 'search-form', placeholder: "面白いを探してみよう！"
      %label(for="search-btn")
        %button
          %i.fas.fa-search
        = submit_tag "", class: "hidden", id: "search-btn"
    = link_to "レシピを探す", recipes_path
  - if user_signed_in?
    .main-header__icon.centering
      = link_to "/users/#{current_user.id}/myrecipes" do
        %i.fas.fa-folder.fa-2x
      %p MyFolder
    .main-header__icon.centering
      = link_to notifications_path do
        %i.fas.fa-bell.fa-2x
        - if unchecked_notifications.any?
          .main-header__notifications
            = @uncheck.length
      %p Notice
    .main-header__hiddenMenu
      = link_to new_play_path, class: "main-header__link" do
        %i.fas.fa-edit
          遊び・投稿
    .main-header__hiddenMenu
      = link_to new_recipe_path, class: "main-header__link" do
        %i.fas.fa-edit
          レシピ投稿
    .main-header__hiddenMenu.centering
      = link_to user_path(current_user.id) do
        - if current_user.user_image.present?
          = image_tag current_user.user_image
        - else
          = image_tag 'avatar.png'
      %p MyPage
  - else
    .main-header__hiddenMenu
      = link_to new_user_registration_path, class: "main-header__link" do
        新規登録
    .main-header__menu
      = link_to new_user_session_path, class: "main-header__link" do
        ログイン
    .main-header__hiddenMenu
      = link_to "#", class: "main-header__link" do
        使い方ガイド
  .mobile-menu__btn
    %span
    %span
    %span